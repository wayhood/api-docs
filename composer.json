{
    "name": "wayhood/hyperf-apidocs",
    "description": "A swagger library for Hyperf.",
    "license": "MIT",
    "keywords": [
      "php",
      "docs",
      "hyperf",
      "swagger",
      "hyperf swagger"
    ],
  "authors": [
    {
      "name": "TangWei",
      "email": "tw2066@163.com",
      "homepage": "https://github.com/tw2066",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.0",
    "symfony/property-access": "^6.0",
    "tangwei/swagger-ui": "^4.6",
    "wayhood/hyperf-dto": "2.0.x-dev"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": ">=7.0",
    "symfony/var-dumper": "^5.1"
  },
  "autoload": {
    "psr-4": {
      "Hyperf\\ApiDocs\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\ApiDocs\\": "tests/"
    }
  },
  "extra": {
    "hyperf": {
      "config": "Hyperf\\ApiDocs\\ConfigProvider"
    },
    "branch-alias": {
      "dev-master": "2.0.x-dev"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml --colors=always",
    "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
    "cs-fix": "php-cs-fixer fix src && php-cs-fixer fix tests"
  }
}
